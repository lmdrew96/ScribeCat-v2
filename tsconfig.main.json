{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/main/**/*",
    "src/infrastructure/**/*",
    "src/application/**/*",
    "src/domain/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.spec.ts", "src/test"]
}
