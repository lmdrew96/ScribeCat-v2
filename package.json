    "@types/electron": "^1.4.38",
    "@types/electron-store": "^1.3.1",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.6.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.6",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.11",
    "happy-dom": "^20.0.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@supabase/supabase-js": "^2.78.0",
    "@tiptap/core": "^3.9.1",
    "@tiptap/extension-collaboration": "^3.10.1",
    "@tiptap/extension-highlight": "^3.9.1",
    "@tiptap/extension-image": "^3.10.1",
    "@tiptap/extension-link": "^3.9.1",
    "@tiptap/extension-placeholder": "^3.9.1",
