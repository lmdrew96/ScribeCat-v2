{
  "appId": "com.scribecat.app",
  "productName": "ScribeCat",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/**/*",
    "assets/**/*",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.education",
    "target": "dmg",
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "extendInfo": {
      "NSMicrophoneUsageDescription": "ScribeCat needs access to your microphone to record audio for transcription."
    }
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": "AppImage"
  }
}
